<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-900 text-white pt-5">
  <div class="w-full px-4 flex items-center justify-between">
    <img class="w-1/4" src="/images/Insta-logo.png" alt="" />
    <div class="icons -mt-2 flex gap-5 items-center">
      <i class="text-[1.4rem] ri-heart-3-line"></i>
      <i class="text-[1.4rem] ri-messenger-line"></i>
    </div>
  </div>
  <hr class="opacity-30 mt-2 mb-2" />

  <div class="w-full mt-1 flex items-center justify-center"><h3 class="text-center font-semibold text-zinc-600">Your Liked Post ❤️</h3></div>
  <div class="posts w-full flex gap-1 px-2 py-2 mt-1 flex-wrap">
    <% if(user.likedPost.length > 0){ %>
      <% user.likedPost.reverse().forEach(function(post){ %>
        <div class="post w-[32.5%] h-32 bg-sky-100 rounded-md overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.postImage %>" alt="">
        </div>
      <% }) %>
    <% } else { %>
      <div class="w-full flex justify-center items-center min-h-[20vh]">
        <small class="opacity-50">No Liked Post yet !!</small>
      </div>
    <% } %>
  
</div>
</div>
<% include ./partials/footer.ejs %>
