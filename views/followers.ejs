<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-900 text-white pt-5">
  <div class="w-full px-4 flex items-center justify-between">
    <img class="w-1/4" src="/images/Insta-logo.png" alt="" />
    <div class="icons -mt-2 flex gap-5 items-center">
      <i class="text-[1.4rem] ri-heart-3-line"></i>
      <i class="text-[1.4rem] ri-messenger-line"></i>
    </div>
  </div>

  <hr class="opacity-30 mt-2 mb-2" />
  
  <div class="px-4">
    <% if(searchUser.followers.length > 0 ){ %> <%
    searchUser.followers.forEach(function(follower){ %>
    <a href="/profile/<%= follower.username %>" class="outline-none">
      <div class="text-white flex items-center gap-4 mt-5">
        <div
          class="image w-[11vw] h-[11vw] rounded-full bg-sky-100 overflow-hidden"
        >
          <img src="/images/uploads/<%= follower.profileImage %>" alt="" />
        </div>
        <div class="text">
          <h3><%= follower.username %></h3>
          <h4 class="text-xs opacity-30 leading-none"><%= follower.name %></h4>
        </div>
      </div>
    </a>
    <% }) %> 
    <% } else{ %>
       <div class="w-full flex justify-center items-center min-h-[20vh]">
        <small class="opacity-50">No Followers !!</small>
      </div>
     <% } %>
  </div>
</div>
<% include ./partials/footer.ejs %>
